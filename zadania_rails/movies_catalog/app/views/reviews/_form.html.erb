<%= form_for(@review.new_record? ? [@movie, @review] : [@review.movie, @review]) do |f| %>

  <div class="form-group">
    <%= f.label :rate %>
    <%= f.number_field :rate, class: "form-control" %>
    <%= render 'shared/error_messages', object: @review, field_name: :rate %>
  </div>

  <div class="form-group">
    <%= f.label :body, 'Your opinion' %>
    <%= f.text_area :body, class: "form-control" %>
    <%= render 'shared/error_messages', object: @review, field_name: :body %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-default"%>
  </div>
<% end %>
