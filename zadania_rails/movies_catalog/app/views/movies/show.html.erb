<h1><%= @movie.title %></h1>

<% if current_user && current_user.admin? %>
  <%= link_to "Edit", edit_movie_path(@movie) %>
  <%= link_to "Delete", movie_path(@movie),
              method: :delete,
              data: { confirm: 'Are you sure?' }%>
<% end %>

<h1>Comments</h1>
<% if @movie.opinions %>
  <%= render @movie.opinions %>
<% end %>
<%= render 'opinions/form', opinion: @opinion %>
