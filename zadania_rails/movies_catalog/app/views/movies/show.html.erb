<h1><%= @movie.title %></h1>

<% if current_user %>
  <%= link_to "Edit", edit_movie_path(@movie) %>
  <%= link_to "Delete", movie_path(@movie),
              method: :delete,
              data: { confirm: 'Are you sure?' }%>
<% end %>

<h1>Comments</h1>
<%= render @movie.opinions %>
<%= render 'opinions/form', opinion: @opinion %>
