<h1><%= @movie.title %></h1>

<p>
  <%= link_to "Back to main page", movies_path %>
</p>

<% if current_user %>
  <p>
    <%= link_to "Edit", edit_movie_path(@movie) %>
    <%= link_to "Delete", movie_path(@movie),
                method: :delete,
                data: { confirm: 'Are you sure?' }%>
  </p>
<% end %>
