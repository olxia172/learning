<% @genre.movies.each do |movie| %>
  <div class="row movie-index">
    <div class="col-md-2">
      <h1><%= movie.title %></h1>
    </div>
    <div class="col-md-2">
      <%= image_tag(movie.image_url(:thumb).to_s) %>
    </div>
    <div class="col-md-5">
      <h3><%= movie.description %></h3>
    </div>
    <div class="col-md-1">
      <%= link_to "Show", movie_path(movie), class: "btn btn-default btn-lg btn-index" %>
    </div>

    <% if current_user && current_user.admin? %>
      <div class="col-md-1">
        <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-success btn-lg btn-index" %>
      </div>
      <div class="col-md-1">
        <%= link_to "Delete", movie_path(movie),
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-danger btn-lg btn-index"%>
      </div>
    <% end %>
  </div>
<% end %>
