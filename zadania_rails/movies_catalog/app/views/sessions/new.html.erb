<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
    <%= render 'shared/error_messages', object: @user, field_name: :email %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control" %>
    <%= render 'shared/error_messages', object: @user, field_name: :password %>
  </div>
  
  <div class="form-group"><%= f.submit "Log in", class: "btn btn-default" %></div>
<% end %>
